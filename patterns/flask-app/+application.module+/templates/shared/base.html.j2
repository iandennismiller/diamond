<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="/static/favicon.ico" type="image/x-icon" />

    <title>{% block title %}{% endblock %}</title>

    <!-- jquery -->
    <script src="/static/lib/jquery/jquery-3.5.1.min.js"></script>

    <!-- bootstrap -->
    <link rel="stylesheet" href="/static/lib/bootstrap/bootstrap-4.4.1-dist/css/bootstrap.min.css" />
    <script src="/static/lib/bootstrap/bootstrap-4.4.1-dist/js/bootstrap.min.js"></script>

    <!-- fontawesome -->
    <link rel="stylesheet" href="/static/lib/fontawesome/fontawesome-free-5.13.0-web/css/all.min.css" />
    <script src="/static/lib/fontawesome/fontawesome-free-5.13.0-web/js/all.min.js"></script>

</head>

<body>
    {% include "shared/navigation.html.j2" %}
    
    {% with messages = get_flashed_messages() %}
    <div aria-live="polite" aria-atomic="true" style="position: relative;">
        <div style="position: absolute; top: 1em; right: 1em;">

        {% for message in messages %}
            <div class="toast fade" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="toast-header">
                <i class="far fa-comment" style="color: blue;"></i>&nbsp;

                <!-- <svg class="bd-placeholder-img rounded mr-2" width="20" height="20" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img"> -->
                    <!-- <rect width="100%" height="100%" fill="#007aff"></rect> -->
                <!-- </svg> -->
                
                <strong class="mr-auto">Application Server</strong>
                <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                </div>
                <div class="toast-body">
                    {{ message }}
                </div>
            </div>    
        </div>
      {% endfor %}
    </div>
    </div>
    {% endwith %}

    {% block content %}
    {% endblock %}

    <div class="container" id="footer">
        <p class="text-center mt-5">Application Server</p>
    </div>

    <script>
        $('.toast').toast({autohide: false});
        $('.toast').toast('show');
    </script>

</body>

</html>