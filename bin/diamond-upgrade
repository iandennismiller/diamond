#!/bin/bash

PROJECT_NAME="$1"

WORK_PATH=~/Work
PYTHON_BIN=/usr/local/bin/python

if [ -f ~/.diamond-patterns.conf  ]; then
    source ~/.diamond-patterns.conf
fi

function usage() {
cat <<-EOF
Diamond - http://github.com/iandennismiller/diamond

Usage: diamond-upgrade

Options:

    -h, --help          output help information

Description:

    diamond-upgrade retrieves the latest patterns.

EOF
}

function diamond-upgrade() {
    if [ -d "${DIAMOND_PATTERNS_PATH}" ]; then
        cd "${DIAMOND_PATTERNS_PATH}"
        git pull
    else
        echo "Run 'diamond' first to ensure ~/.diamond-patterns is created."
        echo "Or, if running inside a virtual environment, use 'pip' to upgrade."
    fi
}

if test $# -lt 1; then
    usage
    exit
fi

while test $# -ne 0; do
    arg=$1; shift
    case $arg in
        -h|--help) usage; exit ;;
        *) project-new; exit ;;
    esac
done
